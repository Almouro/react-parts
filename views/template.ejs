<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>React.parts - A catalog of React components</title>

  <link href="//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.min.css" rel="stylesheet">
  <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,600|Source+Code+Pro:400" rel="stylesheet">
  <style>
    /* Disable overscroll (bouncing scroll effect on OS X) */
    html, body {
      width: 100%;
      height: 100%;
      overflow: hidden;
      background: #ebedf2;
      margin: 0;
    }
    /* This class keeps the content scrollable and allows to programmatically change
     * the scroll position (which becomes broken with the css for disabling overscroll) */
    #container, .scrollable {
      width: 100%;
      height: 100%;
      min-height: 100%;
      overflow: auto;
      -webkit-overflow-scrolling: touch;
    }
    /* Temporary hack for Safari */
    .NavBar, .ComponentItem-header, .Tabs {
      display: -webkit-box;
      -webkit-align-items: center;
    }

    /* Make visited links slightly brighter */
    a {
      color: #000;
    }
    a:visited {
      color: #666;
    }

    ::-webkit-input-placeholder {
      color: #fff;
      font-weight: 300;
    }
    ::-moz-placeholder {
      color: #fff;
      font-weight: 300;
    }
    :-ms-input-placeholder {
      color: #fff;
      font-weight: 300;
    }

    @media only screen and (max-width: 768px) {
      html {
        font-size: 80%;
      }
      .NavBar-submit {
        display: none !important;
      }
    }
  </style>
</head>
<body>
  <div id="container"><%- output %></div>

  <script>
    window.debugMode = <%- debugMode %>;
    window.initialComponents = <%- JSON.stringify(initialComponents) %>;
  </script>
  <%- cachify_js("/app.min.js") %>
</body>
</html>
